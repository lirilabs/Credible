{
  "compilerOptions": {
    /* ---------- Core ---------- */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "Node",

    /* ---------- Paths ---------- */
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",

    /* ---------- Strictness ---------- */
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* ---------- Interop ---------- */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* ---------- Vercel / Node ---------- */
    "types": ["node"],

    /* ---------- Performance ---------- */
    "incremental": true
  },

  "include": [
    "api/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
